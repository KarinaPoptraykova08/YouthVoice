@{
    ViewData["Title"] = "SignIn";
}
@model YouthVoice.Models.User

<main>
    <section class="py-5 my-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card shadow border-0 rounded-lg">
                        <div class="card-header bg-white text-center py-5 pb-0 border-0">
                            <h3 class="mb-0">Login to YouthVoice</h3>
                        </div>
                        <div class="card-body p-4 p-md-5">
                            <form id="loginForm" asp-action="SignIn" asp-controller="Authentication">
                                <div class="mb-4">
                                    <label for="email" class="form-label">Email address</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                        <input class="form-control" type="text" name="email" placeholder="name@example.com" asp-for="Email" required>
                                    </div>
                                    @if (ViewBag.EmailError != null)
                                    {
                                        <p style="color:red;">@ViewBag.EmailError</p>
                                    }
                                </div>
                                <div class="mb-4">
                                    <label for="password" class="form-label">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                        <input class="form-control" type="password" name="password" placeholder="Password" asp-for="Password" required>
                                    </div>
                                    @if (ViewBag.PasswordError != null)
                                    {
                                        <p style="color:red;">@ViewBag.PasswordError</p>
                                    }
                                </div>
                                <div class="mb-4 form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Login</button>
                                </div>
                            </form>
                            <div class="text-center mt-4">
                                <a asp-controller="Authentication" asp-action="ForgotPassword" class="text-decoration-none">Forgot password?</a>
                            </div>
                            <hr class="my-4">
                            <div class="text-center">
                                <p class="mb-3">Or login with</p>
                                <div class="social-login">
                                    <button class="btn btn-outline-primary me-2"><i class="fa fa-google"></i> Google</button>
                                    <button class="btn btn-outline-primary"><i class="fa fa-facebook-f"></i> Facebook</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white text-center py-3 border-0">
                            <p class="mb-0">Don't have an account? <a asp-action="Register" class="text-decoration-none">Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
@if (ViewBag.Message != null)
{
    <p style="color:green;">@ViewBag.Message</p>
}