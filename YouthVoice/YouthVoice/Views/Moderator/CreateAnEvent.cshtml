@{
    ViewData["Title"] = "MaderatorPage";
}
@model YouthVoice.Data.Event


<main>
    <!-- Sidebar -->
    <partial name="Shared/_ModeratorLayout" />

    <!-- Main Content -->
    <div class="admin-main">

        <!-- Content -->
        <div class="admin-content">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="admin-page-title">Създайте ново събитие</h1>
                </div>

                <!-- Event Form -->
                <div class="card border-0 shadow mb-4">
                    <div class="card-body">
                        <form id="eventForm">
                            <div class="row mb-4">
                                <div class="col-lg-8">
                                    <div class="mb-3">
                                        <label for="eventTitle" class="form-label">Заглавие <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="eventTitle" placeholder="Задайте заглавие..." required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="eventDescription" class="form-label">Кратко описание <span class="text-danger">*</span></label>
                                        <div class="form-text">Кратко описание на събитето, което да се използва за постера на събитието. (Не повече от 180 символа)</div>
                                        <textarea class="form-control" name="description" asp-for=Description rows="6" placeholder="Опишете събитието..." required maxlength="180" id="myTextarea" oninput="updateCounter()"></textarea>
                                        <p class="counter"><span id="charCount">0</span>/180 characters</p>                                        
                                    </div>

                                    <div class="mb-3">
                                        <label for="eventDescription" class="form-label">Описание <span class="text-danger">*</span></label>
                                        <textarea class="form-control" name="description" asp-for=Description rows="12" placeholder="Опишете събитието..." required></textarea>
                                        <div class="form-text">Изгответе подробно описание на събитието, включително дейности, лектори и какво могат да очакват присъстващите.</div>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">Детайли</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="eventOrganization" class="form-label">Организация <span class="text-danger">*</span></label>
                                                <select class="form-select" id="eventOrganization" required>
                                                    <option value="">Изберете организация</option>
                                                    <option value="1">Младежки омбудсман</option>
                                                    <option value="2">Младежки център "София"</option>
                                                    <option value="3">Младежка асоциация "Пловдив"</option>
                                                    <option value="4">Младежка инициатива "Варна"</option>
                                                </select>
                                            </div>

                                            <div class="mb-3">
                                                <label for="eventCategory" class="form-label">Категория <span class="text-danger">*</span></label>
                                                <select class="form-select" id="eventCategory" required>
                                                    <option value="">Изберете категория</option>
                                                    <option value="workshop">Доброволчество</option>
                                                    <option value="conference">Състезания</option>
                                                    <option value="seminar">Среши</option>
                                                    <option value="networking">Обучения</option>
                                                    <option value="volunteer">Други</option>
                                                </select>
                                            </div>

                                            <div class="mb-3">
                                                <label for="eventDate" class="form-label">Дата <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="eventDate" placeholder="Изберете дата" required>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <label for="eventStartTime" class="form-label">Час на започване</label>
                                                    <input type="text" class="form-control" id="eventStartTime" placeholder="Час на започване" required>
                                                </div>
                                                <div class="col-6">
                                                    <label for="eventEndTime" class="form-label">Час на приключване</label>
                                                    <input type="text" class="form-control" id="eventEndTime" placeholder="Час на приключване" required>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label d-block">Тип на провеждане <span class="text-danger">*</span></label>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="eventType" id="inPersonEvent" value="in_person" checked>
                                                    <label class="form-check-label" for="inPersonEvent">Присъствено</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="eventType" id="onlineEvent" value="online">
                                                    <label class="form-check-label" for="onlineEvent">Онлайн</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-lg-8">
                                    <div class="mb-3">
                                        <label for="eventLocation" class="form-label">Локация <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="eventLocation" placeholder="Въведете името на мястото" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="eventAddress" class="form-label">Адрес</label>
                                        <textarea class="form-control" id="eventAddress" rows="3" placeholder="Въведете пълния адрес"></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label for="eventVirtualLink" class="form-label">Линк за виртуална среща</label>
                                        <input type="url" class="form-control" id="eventVirtualLink" placeholder="Въведете Zoom, Teams или друг URL адрес за среща">
                                        <div class="form-text">Изисква се за онлайн събития.</div>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">Регистрация и капацитет</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="eventCapacity" class="form-label">Максимален капацитет</label>
                                                <input type="number" class="form-control" id="eventCapacity" placeholder="Оставете празно за неограничено">
                                            </div>

                                            <div class="mb-3">
                                                <label for="registrationDeadline" class="form-label">Краен срок за регистрация</label>
                                                <input type="text" class="form-control" id="registrationDeadline" placeholder="Изберете крайна дата">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">Снимки на събитието</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="eventFeaturedImage" class="form-label">Основно изображение <span class="text-danger">*</span></label>
                                                <input class="form-control" type="file" id="eventFeaturedImage" accept="image/*" required>
                                                <div class="form-text">Това ще бъде основното изображение, за вашето събитие. Препоръчителен размер: 1200 x 630 пиксела.</div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="eventGalleryImages" class="form-label">Допълнителни изображения</label>
                                                <input class="form-control" type="file" id="eventGalleryImages" accept="image/*" multiple>
                                                <div class="form-text">Можете да качите до 5 допълнителни изображения</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                            

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-secondary" id="cancelBtn">
                                    <i class="fa fa-times me-1"></i> Отказ
                                </button>
                                <div>
                                    <button type="submit" class="btn btn-primary" id="submitEventBtn">
                                        <i class="fa fa-paper-plane me-1"></i> Публикувай
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function updateCounter() {
            let textarea = document.getElementById("myTextarea");
            let count = textarea.value.length;
            document.getElementById("charCount").textContent = count;
        }
    </script>
</main>






