@{
    ViewData["Title"] = "Home Page";
}
@model YouthVoice.Models.EmailService

<header class="hero-section">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/Home/home-1.png" class="d-block w-100" alt="Youth Community">
                <div class="carousel-caption rounded-pill">
                    <h1 class="display-4 text-light p-0">Гласът на младите</h1>
                    <p class="lead rounded-2">Докосни се до работата на младежките организации в България</p>
                    <a asp-controller="Organisations" asp-action="Organisations" class="btn btn-primary btn-lg btn-light">Разгледай организациите</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Home/home-2.png" class="d-block w-100" alt="Student Event">
                <div class="carousel-caption rounded-pill">
                    <h1 class="display-4 text-light">Открий нови събития</h1>
                    <p class="lead rounded-2">Открий най-близките иниациативи до теб</p>
                    <a asp-controller="Organisations" asp-action="Events" class="btn btn-primary btn-lg btn-light">Разгледай събития</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Home/home-3.jpg" class="d-block w-100" alt="Youth Volunteers">
                <div class="carousel-caption rounded-pill">
                    <h1 class="display-4 text-light">Включете се</h1>
                    <p class="lead rounded-2">Присъедини се към любимата си организация. Запиши се сега.</p>
                    <a href="signup.html" class="btn btn-primary btn-lg btn-light">Присъедини се сега</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</header>

<main>
    <!-- Upcoming Events Section -->
    <section id="upcoming-events" class="py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">Предстоящи събития</h2>
            <div class="events-slider">
                <div class="row events-row flex-nowrap overflow-auto pb-4">
                    <!-- Event 1 -->
                    <div class="col-md-4 col-lg-3">
                        <div class="card event-card">
                            <img src="~/images/fireworks.jpeg" class="card-img-top" alt="Conference">
                            <div class="card-body">
                                <h5 class="card-title">Youth Leadership Conference</h5>
                                <div class="event-date">
                                    <i class="far fa-calendar-alt"></i> June 15, 2023
                                </div>
                                <div class="event-time">
                                    <i class="far fa-clock"></i> 10:00 AM - 4:00 PM
                                </div>
                                <div class="event-org">
                                    <i class="fas fa-users"></i> Youth Leaders Association
                                </div>
                                <a href="event-details.html?id=1" class="btn btn-outline-primary mt-3">Научи повече</a>
                            </div>
                        </div>
                    </div>

                    <!-- Event 2 -->
                    <div class="col-md-4 col-lg-3">
                        <div class="card event-card">
                            <img src="~/images/events.jpg" class="card-img-top" alt="Workshop">
                            <div class="card-body">
                                <h5 class="card-title">Digital Skills Workshop</h5>
                                <div class="event-date">
                                    <i class="far fa-calendar-alt"></i> June 22, 2023
                                </div>
                                <div class="event-time">
                                    <i class="far fa-clock"></i> 2:00 PM - 6:00 PM
                                </div>
                                <div class="event-org">
                                    <i class="fas fa-users"></i> Tech Youth Network
                                </div>
                                <a href="event-details.html?id=2" class="btn btn-outline-primary mt-3">Научи повече</a>
                            </div>
                        </div>
                    </div>

                    <!-- Event 3 -->
                    <div class="col-md-4 col-lg-3">
                        <div class="card event-card">
                            <img src="https://source.unsplash.com/random/600x400/?volunteer" class="card-img-top" alt="Volunteer">
                            <div class="card-body">
                                <h5 class="card-title">Community Cleanup Day</h5>
                                <div class="event-date">
                                    <i class="far fa-calendar-alt"></i> July 1, 2023
                                </div>
                                <div class="event-time">
                                    <i class="far fa-clock"></i> 9:00 AM - 1:00 PM
                                </div>
                                <div class="event-org">
                                    <i class="fas fa-users"></i> Green Youth Movement
                                </div>
                                <a href="event-details.html?id=3" class="btn btn-outline-primary mt-3">Научи повече</a>
                            </div>
                        </div>
                    </div>

                    <!-- Event 4 -->
                    <div class="col-md-4 col-lg-3">
                        <div class="card event-card">
                            <img src="https://source.unsplash.com/random/600x400/?music,youth" class="card-img-top" alt="Music Festival">
                            <div class="card-body">
                                <h5 class="card-title">Youth Music Festival</h5>
                                <div class="event-date">
                                    <i class="far fa-calendar-alt"></i> July 15, 2023
                                </div>
                                <div class="event-time">
                                    <i class="far fa-clock"></i> 5:00 PM - 10:00 PM
                                </div>
                                <div class="event-org">
                                    <i class="fas fa-users"></i> Arts & Culture Youth Club
                                </div>
                                <a href="event-details.html?id=4" class="btn btn-outline-primary mt-3">Научи повече</a>
                            </div>
                        </div>
                    </div>

                    <!-- Event 5 -->
                    <div class="col-md-4 col-lg-3">
                        <div class="card event-card">
                            <img src="https://source.unsplash.com/random/600x400/?education" class="card-img-top" alt="Education">
                            <div class="card-body">
                                <h5 class="card-title">Career Guidance Seminar</h5>
                                <div class="event-date">
                                    <i class="far fa-calendar-alt"></i> July 28, 2023
                                </div>
                                <div class="event-time">
                                    <i class="far fa-clock"></i> 1:00 PM - 5:00 PM
                                </div>
                                <div class="event-org">
                                    <i class="fas fa-users"></i> Future Leaders Network
                                </div>
                                <a href="event-details.html?id=5" class="btn btn-outline-primary mt-3">Научи повече</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a asp-controller="Organisations" asp-action="Events" id="target-section" class="btn btn-primary">Разгледай всички събития</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-content-lg-center align">
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow">
                        <div class="card-body">
                            <h3 class="card-title text-center mb-4">Свържи се с екипа ни</h3>
                            <form asp-controller="Home" asp-action="SendFeedback">
                                @if(!(User.IsInRole("viewer") || User.IsInRole("editor") || User.IsInRole("owner"))){
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Имейл адрес</label>
                                        <input asp-for="FromEmail" type="email" class="form-control" id="email" placeholder="имейл..." required>
                                    </div>
                                }
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Тема</label>
                                    <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="тема..." required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Съобщение</label>
                                    <textarea asp-for="Body" class="form-control" id="message" rows="5" placeholder="съобщение..." required></textarea>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Изпрати</button>
                                </div>
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <p class="py-2" style="color:darkred;">@ViewBag.ErrorMessage</p>
                                }
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-img w-50">
                    <img src="~/images/Home/contact-us.svg" class="contact-us-img" />
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Organizations -->
    <section id="featured-orgs" class="py-5">
        <div class="container">
            <h2 class="section-title text-center mb-5">Featured Organizations</h2>
            <div class="row">
                <!-- Organization 1 -->
                <div class="col-md-4 mb-4">
                    <div class="card org-card h-100">
                        <img src="https://source.unsplash.com/random/600x400/?team" class="card-img-top" alt="Organization">
                        <div class="card-body">
                            <h5 class="card-title">Youth Leaders Association</h5>
                            <p class="card-text">Developing leadership skills in young people through workshops, mentoring, and community projects.</p>
                            <div class="org-location">
                                <i class="fas fa-map-marker-alt"></i> Capital City
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="organization-details.html?id=1" class="btn btn-outline-primary">View Profile</a>
                        </div>
                    </div>
                </div>

                <!-- Organization 2 -->
                <div class="col-md-4 mb-4">
                    <div class="card org-card h-100">
                        <img src="https://source.unsplash.com/random/600x400/?technology" class="card-img-top" alt="Organization">
                        <div class="card-body">
                            <h5 class="card-title">Tech Youth Network</h5>
                            <p class="card-text">Bridging the digital divide by providing technology education and resources to underserved youth.</p>
                            <div class="org-location">
                                <i class="fas fa-map-marker-alt"></i> Tech Valley
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="organization-details.html?id=2" class="btn btn-outline-primary">View Profile</a>
                        </div>
                    </div>
                </div>

                <!-- Organization 3 -->
                <div class="col-md-4 mb-4">
                    <div class="card org-card h-100">
                        <img src="https://source.unsplash.com/random/600x400/?environment" class="card-img-top" alt="Organization">
                        <div class="card-body">
                            <h5 class="card-title">Green Youth Movement</h5>
                            <p class="card-text">Empowering young people to take action on environmental issues through education and activism.</p>
                            <div class="org-location">
                                <i class="fas fa-map-marker-alt"></i> Riverside
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <a href="organization-details.html?id=3" class="btn btn-outline-primary">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="organizations.html" class="btn btn-primary">Explore All Organizations</a>
            </div>
        </div>
    </section>
</main>